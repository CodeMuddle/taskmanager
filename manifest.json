{
    "manifest_version": 2,
    "name": "Task Manager",
    "description": "Task Manager",
    "version": "0.0.0.1",
    "background": {
        "scripts": [
            "event.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "RCR Example",
        "default_popup": "popup.html"
    },
    "permissions": [
        "background",
        "tabs", "contextMenus", "storage", "notifications"
    ],
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "css": ["content.css"],
        "js": ["content.js"]
    }]
}